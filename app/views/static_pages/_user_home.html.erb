<h1><%= @user.name %>
<small><%= @user.email %></small></h1>

<div class="text-center">
<%= link_to "Create New Event", new_event_path, class: "btn btn-success" %> 
</div>

<% if @upcoming_events.any? %>
<h2>Upcoming</h2>
<%= render partial: 'shared/table', locals: {events:@upcoming_events} %>
<% end %>

<% if @previous_events.any? %>
<h2>Attended</h2>
<%= render partial: 'shared/table', locals: {events:@previous_events} %>
<% end %>

<% if @user.events.any? %>
<h2>My Events</h2>
<%= render partial: 'shared/table', locals: {events:@user.events} %>
<% end %>